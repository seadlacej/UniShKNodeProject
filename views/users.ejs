<!DOCTYPE html>
<html>
<head>
  <title>User List</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f2f2f2;
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 80%;
      margin: 0 auto;
      padding: 20px;
    }

    h1 {
      text-align: center;
    }

    form {
      margin-bottom: 20px;
    }

    input[type="text"],
    input[type="email"],
    button {
      padding: 10px;
      border-radius: 5px;
      border: 1px solid #ccc;
      margin-right: 5px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }

    table th,
    table td {
      padding: 12px 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    .actions {
      display: flex;
      align-items: center;
    }

    .redirect-button,
    .remove-button {
      padding: 8px 12px;
      border-radius: 5px;
      border: none;
      background-color: #333;
      color: #fff;
      margin-right: 5px;
      text-decoration: none;
      cursor: pointer;
    }

    .redirect-button:hover,
    .remove-button:hover {
      background-color: #555;
    }

    a {
      display: block;
      text-align: center;
      margin-bottom: 20px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>User List</h1>

    <form action="/users/" method="POST">
      <input type="text" name="username" placeholder="Username">
      <input type="text" name="firstname" placeholder="First Name">
      <input type="text" name="lastname" placeholder="Last Name">
      <input type="email" name="email" placeholder="Email">
      <button type="submit">Add User</button>
    </form>

    <table>
      <thead>
        <tr>
          <th>Username</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(function(user) { %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.firstname %></td>
            <td><%= user.lastname %></td>
            <td><%= user.email %></td>
            <td class="actions">
              <a href="/users/<%= user.id %>" class="redirect-button">Go to User Details</a>
              <form action="/users/remove" method="POST">
                <input type="hidden" name="id" value="<%= user.id %>">
                <button type="submit" class="remove-button">Remove</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>

    <div class="links">
    <a href="/users/with_highest_report_number">Stats of users with the highest number of reports</a>
    <a href="/users/with_highest_report_rejected">Stats of users with the highest number of rejected reports</a>
    <a href="/users/with_highest_report_approved">Stats of users with the highest number of accepted reports</a>
  </div>
  </div>
</body>
</html>
